<%= form_for @recipe do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :course %>
    <%= f.text_field :course %>
  </div>

  <div class="form-group">
    <%= f.label :cooktime, 'Cook time' %>  
    <%= f.text_field :cooktime %> 
  </div>  

  <div class="form-group">
    <%= f.label :servingsize, 'Serving Size' %>  
    <%= f.text_field :servingsize %> 
  </div>  

    <div class="form-group">
    <%= f.label :instructions %>  
    <%= f.text_area :instructions %> 
  </div>  


  <div class="form-group">
    <%= f.label :image %> 
    <%= f.text_field :image %>  
  </div>   

    <div class="form-group">
    <%= f.label :ingredient_ids %> 
    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>  
  </div> 

  <div class="form-group">
    <%= f.label :book_id %> 
    <%= f.collection_select :book_id, Book.all, :id, :title %>  
  </div> 


  <div class="form-group">
    <%= f.submit %> 
  </div>          
<% end %>