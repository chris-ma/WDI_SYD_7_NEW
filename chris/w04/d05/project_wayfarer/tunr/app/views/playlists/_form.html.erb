<%= form_for @playlist do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  </div>
  <div class="form_field">
    <%= f.label :song_ids, "Songs:" %>
    <%= f.collection_check_boxes :song_ids, Song.all, :id, :name %>
  </div>

  <div class="form-group">
    <%= f.submit %> 
  </div>          
<% end %>