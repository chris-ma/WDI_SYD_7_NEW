

<%= form_for @artist do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :label %>
    <%= f.text_field :label %>
  </div>

  <div class="form-group">
    <%= f.label :bio, 'Biography' %>  
    <%= f.text_area :bio %> 
  </div>  

  <div class="form-group">
    <%= f.submit %> 
  </div>          
<% end %>

