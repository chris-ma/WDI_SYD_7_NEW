<h1>To Do List</h1>

<form id="todo-task">
  <p>
    <label for="todo-text">text</label>
    <input type="text" id="todo-text">
    </p>
<p>
      <label for="todo-notes">notes</label>
    <input type="text" id="todo-notes">
</p>
<p>
      <label for="todo-completed">Done?</label>
    <input type="checkbox" id="todo-completed">
</p>
<p>
  
  <input type="submit" value="Add todo">
</p>
 
</form>



<% @todos.each do |todolist| %>
  <tr>
    <td><%= todolist.text, todolist %></td>
    <td><%= todolist.notes, todolist %></td>
    <td><%= link_to 'Display', todo_path %></td>
    <td><%= link_to 'Edit', edit_todo_path%></td>
    <td><%= link_to 'Delete', todo_path,
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>